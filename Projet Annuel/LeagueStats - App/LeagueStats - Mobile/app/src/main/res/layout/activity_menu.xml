<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true" android:alwaysDrawnWithCache="false">


<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="577dp"
        android:background="@drawable/azazaz" />

    <LinearLayout
        android:layout_width="154dp"
        android:layout_height="215dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonChampions"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:backgroundTint="#B37C4DFF"
            android:text="Champions" />

        <Button
            android:id="@+id/buttonObjects"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:backgroundTint="#B37C4DFF"
            android:text="Objets" />

        <Button
            android:id="@+id/buttonHelp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:backgroundTint="#B37C4DFF"
            android:text="Aide" />

        <Button
            android:id="@+id/buttonExit"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:backgroundTint="#B37C4DFF"
            android:text="Quitter" />
    </LinearLayout>
</FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="139dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="283dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="111dp"
            android:scaleType = "centerCrop"
            android:background="@drawable/title3" />
    </FrameLayout>

</RelativeLayout>